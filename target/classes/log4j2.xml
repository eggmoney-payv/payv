<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<!-- File Appender -->
		<File name="FileAppender" fileName="logs/payv-application.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>

		<!-- Rolling File Appender -->
		<RollingFile name="RollingFileAppender"
			fileName="logs/payv-rolling.log"
			filePattern="logs/payv-rolling-%i.log.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<DefaultRolloverStrategy max="5" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<!-- 패키지별 로거 설정 -->
		<Logger name="com.payv.controller" level="DEBUG"
			additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Logger>

		<Logger name="com.payv.service" level="DEBUG"
			additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Logger>

		<Logger name="com.payv.dao" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Logger>

		<!-- MyBatis SQL 로깅 -->
		<Logger name="com.payv.mapper" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Logger>

		<!-- Spring Framework 로깅 -->
		<Logger name="org.springframework" level="INFO"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>

		<!-- HikariCP 로깅 -->
		<Logger name="com.zaxxer.hikari" level="INFO"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>

		<!-- Root Logger -->
		<Root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFileAppender" />
		</Root>
	</Loggers>
</Configuration>