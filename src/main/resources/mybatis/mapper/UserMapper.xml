<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.eggmoney.payv.infrastructure.mybatis.mapper.UserMapper">

	<resultMap id="UserMap" type="com.eggmoney.payv.infrastructure.mybatis.record.UserRecord">
		<id property="userId" column="user_id" />
		<result property="email" column="email" />
		<result property="name" column="name" />
		<result property="createdAt" column="created_at" javaType="java.time.LocalDateTime" />
	</resultMap>

	<select id="selectById" parameterType="string" resultMap="UserMap">
		SELECT USER_ID, EMAIL, NAME, CREATED_AT
		FROM USERS
		WHERE USER_ID = #{userId}
	</select>

	<select id="selectByEmail" parameterType="string" resultMap="UserMap">
		SELECT USER_ID, EMAIL, NAME, CREATED_AT
		FROM USERS
		WHERE EMAIL = #{email}
	</select>

	<insert id="insert" parameterType="com.eggmoney.payv.infrastructure.mybatis.record.UserRecord">
		INSERT INTO USERS (USER_ID, EMAIL, NAME)
		VALUES (#{userId}, #{email}, #{name})
	</insert>

	<update id="update" parameterType="com.eggmoney.payv.infrastructure.mybatis.record.UserRecord">
		UPDATE USERS SET 
			EMAIL = #{email},
			NAME = #{name}
		WHERE USER_ID = #{userId}
	</update>

</mapper>
